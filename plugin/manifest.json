{
    "name": "Facture",
    "description": "A free, open-source news and text review tool",
    "version": "0.0.0",
    "manifest_version": 3,


    "permissions": ["scripting", "activeTab"],
    "host_permissions": ["<all_urls>"],


    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["contentScript.js"],
        "run_at": "document_end"
      }
    ],


    "action": {
      "default_popup": "extensionUI.html"
    },
    "icons": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  }